# ============================================
# BSI UMKM Centre - Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# Server Configuration
NODE_ENV=development
PORT=5000

# ============================================
# SUPABASE CONFIGURATION
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# ============================================

# Supabase Project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key (safe to expose in frontend)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase Service Role Key (SECRET - never expose in frontend!)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# JWT CONFIGURATION
# Used for custom JWT tokens in backend
# ============================================

# JWT Secret Key - Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# JWT Token Expiration
JWT_EXPIRES_IN=7d

# ============================================
# WOOCOMMERCE CONFIGURATION
# Get these from: WordPress Admin → WooCommerce → Settings → Advanced → REST API
# ============================================

# WooCommerce Store URL
WOOCOMMERCE_URL=https://your-store.com

# WooCommerce Consumer Key
WOOCOMMERCE_CONSUMER_KEY=ck_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# WooCommerce Consumer Secret (SECRET - never expose in frontend!)
WOOCOMMERCE_CONSUMER_SECRET=cs_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# CORS CONFIGURATION
# ============================================

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Additional CORS origin (optional)
CORS_ORIGIN=http://localhost:5500

# ============================================
# OPTIONAL: PAYMENT GATEWAY (Indonesia)
# ============================================

# Midtrans Configuration
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=false
